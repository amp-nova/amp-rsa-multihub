{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es2019",
    "module": "commonjs",
    "resolveJsonModule": true,
    "lib": ["es2019", "esnext.asynciterable"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}