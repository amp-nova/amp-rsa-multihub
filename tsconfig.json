{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}