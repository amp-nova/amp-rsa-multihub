{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true
  },
  "include": [
    "datasources/**/*",
    "resolvers/**/*",
    "schemas/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}